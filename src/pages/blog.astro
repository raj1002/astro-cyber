---
import Layout from '../layouts/Layout.astro';
import HUD from '../components/HUD.astro';
import Footer from '../components/Footer.astro';
import { blogPosts } from '../content/blog';
---

<Layout title="Insights" description="Industry perspectives, case studies, and forensic intelligence from our expert investigators">
  <HUD />

  <!-- Hero Section -->
  <section class="relative h-screen flex items-center justify-center border-b border-palantir-border/10">
    <div class="text-center max-w-[1200px] px-8">
      <h1 class="text-[clamp(3rem,8vw,7rem)] font-black leading-[1.1] mb-8 tracking-tight">
        Insights
      </h1>
      <p class="text-[clamp(1rem,2vw,1.5rem)] leading-relaxed text-palantir-gray max-w-[800px] mx-auto">
        Industry perspectives, case studies, and forensic intelligence from our expert investigators.
      </p>
    </div>
  </section>

  <!-- Blog Grid -->
  <section class="py-32 px-8">
    <div class="max-w-[1400px] mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-[2px] bg-palantir-border/10 border border-palantir-border/10 mb-16">
        {blogPosts.map((post) => (
          <article class="bg-palantir-black p-12 border-b border-palantir-border/10 hover:bg-palantir-border/5 transition-colors duration-300">
            <div class="text-sm text-palantir-gray uppercase tracking-widest mb-4">
              {post.category} / {post.date}
            </div>
            <h3 class="text-3xl font-bold mb-6 tracking-tight leading-tight">{post.title}</h3>
            <p class="text-lg leading-relaxed text-palantir-gray mb-6">
              {post.excerpt}
            </p>
            <a href={`/blog/${post.slug}`} class="text-palantir-white font-semibold text-sm uppercase tracking-widest border-b border-palantir-white pb-1 inline-block hover:opacity-70 transition-opacity">
              Read Article â†’
            </a>
          </article>
        ))}
      </div>

      <!-- Newsletter -->
      <div class="bg-palantir-border/5 border border-palantir-border/10 p-16 text-center">
        <h3 class="text-3xl font-bold mb-4">Stay Informed</h3>
        <p class="text-palantir-gray mb-8 text-lg max-w-[600px] mx-auto">
          Receive monthly insights on digital forensics, cybersecurity trends, and investigative techniques.
        </p>
        <form class="flex flex-col md:flex-row gap-4 max-w-[600px] mx-auto">
          <input
            type="email"
            placeholder="Enter your email"
            required
            class="flex-1 bg-transparent border border-palantir-border/10 px-6 py-4 text-palantir-white placeholder:text-palantir-gray focus:outline-none focus:border-palantir-white transition-colors"
          />
          <button
            type="submit"
            class="px-8 py-4 bg-transparent border border-palantir-white text-palantir-white font-semibold uppercase tracking-widest text-sm hover:bg-palantir-white hover:text-palantir-black transition-all duration-300"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
