---
import Layout from '../layouts/Layout.astro';
import HUD from '../components/HUD.astro';
import Footer from '../components/Footer.astro';
import { siteConfig } from '../config';
---

<Layout title="Contact Us" description="Available 24/7 for critical investigations and incident response">
  <HUD />

  <!-- Hero Section -->
  <section class="relative h-screen flex items-center justify-center border-b border-palantir-border/10">
    <div class="text-center max-w-[1200px] px-8">
      <h1 class="text-[clamp(3rem,8vw,7rem)] font-black leading-[1.1] mb-8 tracking-tight">
        Contact Us
      </h1>
      <p class="text-[clamp(1rem,2vw,1.5rem)] leading-relaxed text-palantir-gray max-w-[800px] mx-auto">
        Available 24/7 for critical investigations and incident response. Discuss your case with our expert team.
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="min-h-screen flex items-center py-32 px-8">
    <div class="max-w-[1400px] mx-auto w-full grid grid-cols-1 lg:grid-cols-2 gap-32">
      <!-- Contact Info -->
      <div>
        <h2 class="text-[clamp(2.5rem,5vw,5rem)] font-extrabold leading-[1.1] mb-8 tracking-tight">
          Get in Touch
        </h2>
        <p class="text-xl text-palantir-gray mb-12">
          Whether you need immediate incident response or want to discuss a complex investigation, our team is ready to help.
        </p>

        <div class="space-y-12">
          <div>
            <h3 class="text-sm font-bold uppercase tracking-widest text-palantir-gray mb-4">Emergency Hotline</h3>
            <p class="text-xl font-semibold mb-2">{siteConfig.contact.emergency}</p>
            <p class="text-sm text-palantir-gray">24/7 Incident Response</p>
          </div>

          <div>
            <h3 class="text-sm font-bold uppercase tracking-widest text-palantir-gray mb-4">General Inquiries</h3>
            <p class="text-xl font-semibold mb-2">{siteConfig.contact.email}</p>
            <p class="text-sm text-palantir-gray">Response within 24 hours</p>
          </div>

          <div>
            <h3 class="text-sm font-bold uppercase tracking-widest text-palantir-gray mb-4">Headquarters</h3>
            <p class="text-xl font-semibold mb-2">{siteConfig.contact.address}</p>
            <p class="text-sm text-palantir-gray">Nationwide service available</p>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="border border-palantir-border/10 p-12">
        <form class="space-y-8">
          <div>
            <label for="name" class="block text-sm font-semibold uppercase tracking-widest mb-2">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full bg-transparent border border-palantir-border/10 px-6 py-4 text-palantir-white focus:outline-none focus:border-palantir-white transition-colors"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-semibold uppercase tracking-widest mb-2">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full bg-transparent border border-palantir-border/10 px-6 py-4 text-palantir-white focus:outline-none focus:border-palantir-white transition-colors"
            />
          </div>

          <div>
            <label for="phone" class="block text-sm font-semibold uppercase tracking-widest mb-2">Phone</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full bg-transparent border border-palantir-border/10 px-6 py-4 text-palantir-white focus:outline-none focus:border-palantir-white transition-colors"
            />
          </div>

          <div>
            <label for="subject" class="block text-sm font-semibold uppercase tracking-widest mb-2">Subject</label>
            <input
              type="text"
              id="subject"
              name="subject"
              required
              class="w-full bg-transparent border border-palantir-border/10 px-6 py-4 text-palantir-white focus:outline-none focus:border-palantir-white transition-colors"
            />
          </div>

          <div>
            <label for="message" class="block text-sm font-semibold uppercase tracking-widest mb-2">Message</label>
            <textarea
              id="message"
              name="message"
              required
              rows="6"
              class="w-full bg-transparent border border-palantir-border/10 px-6 py-4 text-palantir-white focus:outline-none focus:border-palantir-white transition-colors resize-vertical"
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full px-8 py-6 bg-transparent border border-palantir-white text-palantir-white font-bold uppercase tracking-widest text-sm hover:bg-palantir-white hover:text-palantir-black transition-all duration-300"
          >
            Send Message
          </button>
        </form>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
